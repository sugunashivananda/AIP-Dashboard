src/components/ui/Badge.tsx

import React from 'react';
import styled, { css } from 'styled-components';

interface BadgeProps {
  status: 'Paid' | 'Pending' | 'Overdue';
  label: string;
}

const statusStyles = {
  Paid: css`
    background: ${({ theme }) => theme.colors.accent};
    color: ${({ theme }) => theme.colors.badgeText};
  `,
  Pending: css`
    background: ${({ theme }) => theme.colors.primary};
    color: ${({ theme }) => theme.colors.badgeText};
  `,
  Overdue: css`
    background: ${({ theme }) => theme.colors.badgeBg};
    color: ${({ theme }) => theme.colors.badgeText};
  `,
};

const StyledBadge = styled.span<{ $status: BadgeProps['status'] }>`
  display: inline-block;
  padding: 0 ${({ theme }) => theme.spacing.sm};
  font-size: 0.875rem;
  border-radius: ${({ theme }) => theme.borderRadius.sm};
  font-weight: ${({ theme }) => theme.typography.fontWeight.medium};
  ${({ $status }) => statusStyles[$status]}
`;

export const Badge: React.FC<BadgeProps> = ({ status, label }) => (
  <StyledBadge $status={status} aria-label={label} role="status">
    {label}
  </StyledBadge>
);

