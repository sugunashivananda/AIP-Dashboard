src/components/Sidebar.tsx

import React from 'react';
import styled from 'styled-components';
import { sidebarMenu } from '../data/mockData';

interface SidebarProps {
  activeItem: string;
  onSelect: (key: string) => void;
}

const StyledSidebar = styled.nav`
  width: 240px;
  background: ${({ theme }) => theme.colors.sidebarBg};
  padding: ${({ theme }) => theme.spacing.lg} 0;
  border-right: 1px solid ${({ theme }) => theme.colors.border};
  display: flex;
  flex-direction: column;
  min-height: 100vh;
`;

const SidebarList = styled.ul`
  list-style: none;
  margin: 0;
  padding: 0;
`;

const SidebarItem = styled.li<{ $active?: boolean }>`
  padding: ${({ theme }) => theme.spacing.md} ${({ theme }) => theme.spacing.lg};
  background: ${({ $active, theme }) => $active ? theme.colors.sidebarActiveBg : 'transparent'};
  color: ${({ $active, theme }) => $active ? theme.colors.sidebarActiveText : theme.colors.text};
  font-weight: ${({ $active, theme }) => $active ? theme.typography.fontWeight.bold : theme.typography.fontWeight.regular};
  cursor: pointer;
  border-left: 4px solid ${({ $active, theme }) => $active ? theme.colors.primary : 'transparent'};
  transition: background 0.2s, color 0.2s;
  &:focus {
    outline: 2px solid ${({ theme }) => theme.colors.primary};
    outline-offset: -2px;
  }
`;

export const Sidebar: React.FC<SidebarProps> = ({ activeItem, onSelect }) => (
  <StyledSidebar aria-label="Sidebar navigation">
    <SidebarList>
      {sidebarMenu.map(item => (
        <SidebarItem
          key={item.key}
          $active={item.key === activeItem}
          tabIndex={0}
          aria-current={item.key === activeItem ? 'page' : undefined}
          onClick={() => onSelect(item.key)}
          onKeyPress={e => {
            if (e.key === 'Enter') onSelect(item.key);
          }}
        >
          {item.label}
        </SidebarItem>
      ))}
    </SidebarList>
  </StyledSidebar>
);

src/components/InvoicesTable.tsx

import React from 'react';
import styled from 'styled-components';
import { tableData } from '../data/mockData';
import { Badge } from './ui/Badge';

const TableWrapper = styled.section`
  background: ${({ theme }) => theme.colors.surface};
  margin: ${({ theme }) => theme.spacing.lg};
  border-radius: ${({ theme }) => theme.borderRadius.md};
  box-shadow: 0 1px 4px rgba(23, 43, 77, 0.04);
  overflow-x: auto;
`;

const StyledTable = styled.table`
  width: 100%;
  border-collapse: collapse;
`;

const TableHead = styled.thead`
  background: ${({ theme }) => theme.colors.tableHeaderBg};
`;

const TableHeaderCell = styled.th`
  padding: ${({ theme }) => theme.spacing.md};
  text-align: left;
  font-weight: ${({ theme }) => theme.typography.fontWeight.medium};
  border-bottom: 1px solid ${({ theme }) => theme.colors.border};
`;

const TableBody = styled.tbody``;

const TableRow = styled.tr<{ $alt?: boolean }>`
  background: ${({ $alt, theme }) => $alt ? theme.colors.tableRowAltBg : theme.colors.tableRowBg};
`;

const TableCell = styled.td`
  padding: ${({ theme }) => theme.spacing.md};
  border-bottom: 1px solid ${({ theme }) => theme.colors.border};
`;

export const InvoicesTable: React.FC = () => (
  <TableWrapper>
    <StyledTable aria-label="Invoices">
      <TableHead>
        <tr>
          <TableHeaderCell>Invoice #</TableHeaderCell>
          <TableHeaderCell>Date</TableHeaderCell>
          <TableHeaderCell>Status</TableHeaderCell>
          <TableHeaderCell>Amount</TableHeaderCell>
        </tr>
      </TableHead>
      <TableBody>
        {tableData.map((row, idx) => (
          <TableRow key={row.id} $alt={idx % 2 === 1}>
            <TableCell>{row.invoiceNumber}</TableCell>
            <TableCell>{row.date}</TableCell>
            <TableCell>
              <Badge status={row.status} label={row.status} />
            </TableCell>
            <TableCell>{row.amount}</TableCell>
          </TableRow>
        ))}
      </TableBody>
    </StyledTable>
  </TableWrapper>
);

